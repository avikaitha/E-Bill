<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.avi.e_bill.app.DetailsActivity"
    android:background="@drawable/splash"
    android:id="@+id/relLayout">


    <TextView
        android:id="@+id/block_1"
        android:layout_width="wrap_content"
        android:fontFamily="sans-serif-thin"
        android:textSize="40sp"
        android:textColor="@android:color/white"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Domestic"
        android:layout_above="@+id/block_2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/block_2"
        android:layout_width="wrap_content"
        android:fontFamily="sans-serif-thin"
        android:textSize="40sp"
        android:textColor="@android:color/white"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Electricity"
        android:layout_above="@+id/block_3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/block_3"
        android:layout_width="wrap_content"
        android:fontFamily="sans-serif-thin"
        android:textSize="40sp"
        android:textColor="@android:color/white"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Bill Monitoring"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>